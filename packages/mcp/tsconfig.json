{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./build",
      "declaration": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "@baselayer/components": ["../components/src/index.ts"],
        "@baselayer/components/*": ["../components/src/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
  }